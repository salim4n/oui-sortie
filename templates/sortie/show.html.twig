{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>DateHeurDebut</th>
                <td>{{ sortie.dateHeurDebut ? sortie.dateHeurDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ sortie.duree ? sortie.duree.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>DateLimiteInscription</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MbInscriptionMax</th>
                <td>{{ sortie.mbInscriptionMax }}</td>
            </tr>
            <tr>
                <th>InfosSortie</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sortie_index') }}">back to list</a>

    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">edit</a>

    <form method="post" action="{{ path('app_sortie_inscription', {'id': sortie.id}) }}"
          onsubmit="return confirm('Etes vous sure de vouloir vous inscrire?');">
        <button class="btn">s'inscrire</button>
    </form>

    <form method="post" action="{{ path('app_sortie_desinscription', {'id': sortie.id}) }}"
          onsubmit="return confirm('Etes vous sure de vouloir vous desinscrire?');">
        <button class="btn">se desinscrire</button>
    </form>



    {{ include('sortie/_delete_form.html.twig') }}
{% endblock %}
